<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="221.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.view.login.LoginViewController">
   <children>
      <VBox layoutY="-1.0" prefHeight="242.0" prefWidth="300.0">
         <children>
            <Label style="-fx-background-radius: 10; -fx-background-color: #619ed4;" text="Log In" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="25.0" />
               </font>
               <VBox.margin>
                  <Insets left="20.0" top="20.0" />
               </VBox.margin>
               <padding>
                  <Insets bottom="2.0" left="5.0" right="5.0" top="2.0" />
               </padding>
            </Label>
            <HBox prefHeight="12.0" prefWidth="480.0">
               <children>
                  <Label prefHeight="25.0" prefWidth="65.0" text="Username: ">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="tf_username" prefHeight="25.0" prefWidth="149.0">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox prefHeight="0.0" prefWidth="480.0">
               <children>
                  <Label prefHeight="25.0" prefWidth="65.0" text="Password: ">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="tf_password">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <Label fx:id="messageLabel" alignment="TOP_LEFT" prefHeight="50.0" prefWidth="260.0" text="Message: " textFill="#b30000" textOverrun="CLIP" visible="false">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
               <font>
                  <Font size="10.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="25.0" prefWidth="349.0">
               <children>
                  <Button fx:id="btn_login" alignment="CENTER" mnemonicParsing="false" onAction="#onLoginBtnPressed" text="log-in" />
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
